{
  "openapi": "3.0.0",
  "info": {
    "title": "Мое API для заметок",
    "description": "API для управления папками, заметками и пользователями",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "Folder": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "609c25b4f1b4c37acc1cc3e1"
          },
          "name": {
            "type": "string",
            "example": "Моя папка"
          },
          "notes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Note"
            }
          }
        }
      },
      "Note": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Название заметки"
          },
          "title": {
            "type": "string",
            "example": "Заголовок заметки"
          },
          "account": {
            "type": "string",
            "example": "609c25b4f1b4c37acc1cc3e1"
          },
          "image": {
            "type": "string",
            "example": "http://example.com/image.jpg"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Регистрация пользователя",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь успешно зарегистрирован",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка при регистрации"
          },
          "401": {
            "description": "Пользователь уже существует"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Вход в учетную запись",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешный вход",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "токен"
                }
              }
            }
          },
          "401": {
            "description": "Неверный Логин или пароль"
          }
        }
      }
    },
    "/getMe": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Получение текущего пользователя",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Возвращает данные текущего пользователя",
            "content": {
              "application/json": {
                "schema": {
                 
                    "properties": {
                      "email": {
                        "type": "string",
                        "example": "user@example.com"
                      },
                      "password": {
                        "type": "string",
                        "example": "password123"
                      },
                      "id": {
                        "type": "string",
                        "example": "490534950349654"
                      }
                    },
                    "required": [
                      "email",
                      "password"
                    ]
                }
              }
            }
          },
          "404": {
            "description": "Пользователь не найден"
          },
          "500": {
            "description": "Произошла ошибка при получении информации о пользователе"
          }
        }
      }
    },
    "/patchUser/{id}": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Редактирование профиля пользователя",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID пользователя"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "новое_имя"
                  },
                  "avatarURL": {
                    "type": "string",
                    "example": "http://example.com/avatar.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Профиль успешно обновлен",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Пользователь не найден"
          },
          "500": {
            "description": "Произошла ошибка при обновлении данных пользователя"
          }
        }
      }
    },
    "/folders": {
      "post": {
        "tags": [
          "Folders"
        ],
        "summary": "Создание папки",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Название папки"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Папка успешно создана",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Folder"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка при создании папки"
          }
        }
      },
      "get": {
        "tags": [
          "Folders"
        ],
        "summary": "Получение всех папок",
        "responses": {
          "200": {
            "description": "Список всех папок",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Folder"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/folders/{id}": {
      "get": {
        "tags": [
          "Folders"
        ],
        "summary": "Получение папки по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID папки"
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о папке",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Folder"
                }
              }
            }
          },
          "404": {
            "description": "Папка не найдена"
          }
        }
      },
      "delete": {
        "tags": [
          "Folders"
        ],
        "summary": "Удаление папки по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID папки"
          }
        ],
        "responses": {
          "200": {
            "description": "Папка успешно удалена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Folder"
                }
              }
            }
          },
          "404": {
            "description": "Папка не найдена"
          }
        }
      }
    },
    "/folder": {
      "patch": {
        "tags": [
          "Folders"
        ],
        "summary": "Обновление названия существующей папки",
        "description": "API для обновления названия папки, используя ID папки, передаваемый в теле запроса.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Идентификатор папки, которую требуется обновить",
                    "example": "609c25b4f1b4c37acc1cc3e1"
                  },
                  "name": {
                    "type": "string",
                    "description": "Новое название папки",
                    "example": "Обновленное название"
                  }
                },
                "required": [
                  "id",
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Название папки успешно обновлено",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Folder"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка запроса, проверьте входные данные"
          },
          "404": {
            "description": "Папка с указанным ID не найдена"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/folders/{folderId}/notes": {
      "post": {
        "tags": [
          "Notes"
        ],
        "summary": "Добавление заметки в папку",
        "parameters": [
          {
            "name": "folderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID папки"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Note"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Заметка успешно добавлена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Folder"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка при добавлении заметки"
          }
        }
      }
    },
    "/folders/{folderId}/notes/{noteId}": {
      "delete": {
        "tags": [
          "Notes"
        ],
        "summary": "Удаление заметки из папки",
        "parameters": [
          {
            "name": "folderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID папки"
          },
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID заметки"
          }
        ],
        "responses": {
          "200": {
            "description": "Заметка успешно удалена из папки",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Folder"
                }
              }
            }
          },
          "404": {
            "description": "Заметка или папка не найдена"
          }
        }
      },
      "patch": {
        "tags": [
          "Notes"
        ],
        "summary": "Обновление заметки в папке",
        "parameters": [
          {
            "name": "folderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID папки"
          },
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID заметки"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Note"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Заметка успешно обновлена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Note"
                }
              }
            }
          },
          "404": {
            "description": "Заметка или папка не найдена"
          }
        }
      }
    }
  }
}